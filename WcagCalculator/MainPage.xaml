                                   Grid.Row="7"
                                   TextColor="{Binding ForegroundColor}"
                                   MaximumWidthRequest="500"/>
                            <Label Text="700 (Bold)"
                                   TextColor="#666666"
                                   FontSize="24"
                                   FontFamily="OpenSansBold"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"
                                   Grid.Row="8" />
